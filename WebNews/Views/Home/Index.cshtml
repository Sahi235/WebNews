@model IndexVM;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string photoPath = null;
    int counter;
}

<!-- ##### Featured Post Area Start ##### -->
<div class="featured-post-area" style="margin-top: 35px;">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-8">
                <div class="row">

                    <!-- Single Featured Post -->
                    <div class="col-12 col-lg-7">
                        <div class="single-blog-post featured-post">
                            <div class="post-thumb">
                                @{photoPath = "/images/News/" + Model.News[0].MainImage;}
                                <a asp-action="NewsDetails" asp-controller="Home" asp-route-seoUrl="@Model.News[0].SeoUrl"><img src="@photoPath" asp-append-version="true" alt="@Model.News[0].Title"></a>
                            </div>
                            <div class="post-data">
                                @{
                                    counter = Model.News[1].Categories.Count();
                                    foreach (var cate in Model.News[1].Categories)
                                    {
                                        <a asp-action="CategoryNews" asp-controller="Home" asp-route-name="@cate.Category.Name" class="post-catagory" style="display: inline">@cate.Category.Name</a>
                                        if (counter > 1)
                                        {
                                            <span style="display: inline">,</span>
                                        }
                                        counter--;
                                    }
                                }
                                <a asp-action="NewsDetails" asp-controller="Home" asp-route-seoUrl="@Model.News[0].SeoUrl" class="post-title">
                                    <h6>@Model.News[0].Title</h6>
                                </a>
                                <div class="post-meta">
                                    @if (Model.News[0].User == null)
                                    {
                                        <p class="post-author">By <a href="#">Sahand</a></p>
                                    }
                                    else
                                    {
                                        <p class="post-author">By <a href="#">@Model.News[0].User.UserName</a></p>
                                    }
                                    <p class="post-excerp">@Model.News[0].ShortDescription</p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="#" class="post-like"><img src="~/Template/img/core-img/like.png" alt="@Model.News[0].Title"> <span>@Model.News[0].Likes</span></a>
                                        <a href="#" class="post-comment"><img src="~/Template/img/core-img/chat.png" alt="@Model.News[0].Title"> <span>@Model.News[0].Comments.Count()</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

