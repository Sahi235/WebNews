<!-- ##### Popular News Area Start ##### -->
<div class="popular-news-area section-padding-80-50" style="padding-top: 30px">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="section-heading">
                    <h6>Galleries</h6>
                </div>

                <div class="row">

                    <!-- Single Post -->
                    @foreach (var gallery in Model.Galleries)
                    {
                        <div class="col-12 col-md-6">
                            <div class="single-blog-post style-3">
                                <div class="post-thumb">
                                    @{photoPath = "/images/gallery/" + gallery.MainImage;}
                                    <a href="#"><img src="@photoPath" asp-append-version="true" alt="@gallery.Title"></a>
                                </div>
                                <div class="post-data">
                                    @{
                                        counter = gallery.Categories.Count();
                                        foreach (var cate in gallery.Categories)
                                        {
                                            <a asp-action="CategoryNews" asp-controller="Home" asp-route-name="@cate.Category.Name" class="post-catagory" style="display: inline">@cate.Category.Name</a>
                                            if (counter > 1)
                                            {
                                                <span style="display: inline"></span>
                                            }
                                        }
                                    }
                                    <a href="#" class="post-title">
                                        <h6>@gallery.Title</h6>
                                    </a>
                                    <div class="post-meta d-flex align-items-center">
                                        <a href="#" class="post-like"><img src="~/Template/img/core-img/like.png" alt="@gallery.Title"> <span>@gallery.Likes</span></a>
                                        <a href="#" class="post-comment"><img src="~/Template/img/core-img/chat.png" alt="@gallery.Title"> <span>@gallery.Comments.Count()</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="section-heading">
                    <h6>Populars</h6>
                </div>
                <!-- Popular News Widget -->
                <div class="popular-news-widget mb-30">
                    <h3>5 Most Popular News</h3>

                    <!-- Single Popular Blog -->
                    @{counter = 1;}
                    @foreach (var news in Model.PopularNews)
                    {
                        <div class="single-popular-post">
                            <a asp-action="NewsDetails" asp-controller="Home" asp-route-seoUrl="@news.SeoUrl">
                                <h6><span>@counter  .</span> @news.Title</h6>
                            </a>
                            <p>@news.PublishedDate.ToString("dddd dd MM yyyy")</p>
                        </div>
                        counter++;
                    }
                </div>

                <!-- Newsletter Widget -->
                <div class="newsletter-widget">
                    <h4>Newsletter</h4>
                    <p>Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.</p>
                    <form action="#" method="post">
                        <input type="text" name="text" placeholder="Name">
                        <input type="email" name="email" placeholder="Email">
                        <button type="submit" class="btn w-100">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Popular News Area End ##### -->
