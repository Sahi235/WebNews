}
<!-- Inner container -->
<div class="row">
    <div class="col-xl-10">
        <div class="d-flex align-items-start flex-column flex-md-row">

            <!-- Left content -->
            <div class="tab-content w-100 order-2 order-md-1">

                <!-- Profile info -->
                <div class="card">
                    <div class="card-header header-elements-inline">
                        <h5 class="card-title">Profile information</h5>
                        <div class="header-elements">
                            <div class="list-icons">
                                <a class="list-icons-item" data-action="collapse"></a>
                                <a class="list-icons-item" data-action="reload"></a>
                                <a class="list-icons-item" data-action="remove"></a>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="EditProfile" asp-controller="Users" asp-area="Panel" asp-route-userId="@Model.User.Id" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input hidden asp-for="@Model.User.Id" />
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Username</label>
                                        <input type="text" disabled asp-for="@Model.User.UserName" value="@Model.User.UserName" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Full name</label>
                                        <input type="text" asp-for="@Model.User.UserName" value="@Model.User.UserName" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Address line 1</label>
                                        <input asp-for="@Model.User.AdressOne" type="text" value="@Model.User.AdressOne" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Address line 2</label>
                                        <input asp-for="@Model.User.AdressTwo" type="text" value="@Model.User.AdressTwo" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>City</label>
                                        <input asp-for="@Model.User.City" type="text" value="@Model.User.City" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <label>State/Province</label>
                                        <input type="text" asp-for="@Model.User.Province" value="@Model.User.Province" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <label>ZIP code</label>
                                        <input type="text" asp-for="@Model.User.ZipCode" value="@Model.User.ZipCode" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Email</label>
                                        <input asp-for="@Model.User.Email" type="text" readonly="readonly" value="@Model.User.Email" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Country</label>
                                        <input asp-for="@Model.User.Country" type="text" value="@Model.User.Country" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Phone #</label>
                                        <input asp-for="@Model.User.PhoneNumber" type="text" value="@Model.User.PhoneNumber" class="form-control">
                                        <span class="form-text text-muted"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label>Upload profile image</label>
                                        <input asp-for="@Model.NewImage" type="file" class="form-input-styled" data-fouc>
                                        <span class="form-text text-muted">Accepted formats: gif, png, jpg. Max file size 2Mb</span>
                                    </div>
                                </div>
                            </div>

                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
