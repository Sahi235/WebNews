@model ReflectionIT.Mvc.Paging.PagingList<Article>;
@{
    ViewData["Title"] = "TableIndex";
    Layout = "~/Views/Shared/_LimitlessLayout.cshtml";
}

@section css{
    <script src="~/LimitlessAssets/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/LimitlessAssets/global_assets/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/LimitlessAssets/global_assets/js/demo_pages/datatables_advanced.js"></script>
    <script src="~/LimitlessAssets/global_assets/js/plugins/notifications/bootbox.min.js"></script>
    <script src="~/LimitlessAssets/global_assets/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/LimitlessAssets/global_assets/js/demo_pages/components_modals.js"></script>
}
<nav>
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model }) 
</nav>


<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Page length options</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>

    <div class="card-body">
        List of <code>Articles</code> with acction buttuns like <code>Edit</code> and <code>Delete</code> and also <code>Comments</code>.
    </div>

    <table class="table datatable-show-all">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Views</th>
                <th>Published Date</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td><a href="#">Will be added</a></td>
                    <td>@item.ViewCount</td>
                    <td>@item.PublishedDate.ToString("dd dddd MM yyyy")</td>
                    @if (item.IsPublished == true)
                    {
                        <td><span class="badge badge-success">Published</span></td>
                    }
                    else
                    {
                        <td><span class="badge badge-dark">Not Published</span></td>
                    }
                    <td class="text-center">
                        <div class="list-icons">
                            <div class="dropdown">
                                <a href="#" class="list-icons-item" data-toggle="dropdown">
                                    <i class="icon-menu9"></i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-right">
                                    <a asp-action="Edit" asp-controller="Articles" asp-area="Panel" asp-route-id="@item.Id" class="dropdown-item"><i class="icon-pencil"></i>Edit</a>
                                    <a asp-action="delete" asp-controller="Articles" asp-area="Panel" asp-route-id="@item.Id" data-toggle="modal" data-target="#modal_theme_danger-@item.Id" class="dropdown-item"><i class="icon-database-remove"></i>Delete</a>
                                    <a asp-action="ArticlesComments" asp-controller="Comments" asp-area="Panel" asp-route-id="@item.Id" class="dropdown-item"><i class="icon-comment"></i>Comments</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>

                <div id="modal_theme_danger-@item.Id" class="modal fade" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-danger">
                                <h6 class="modal-title">Delete!</h6>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <div class="modal-body">
                                <h6 class="font-weight-semibold">For your information!</h6>
                                <p>You are about to delet this Article, Remember that if you delete you can restore it from deleted Article page. Every deleted news can be restored till 30 days after being deleted. But deleted Article can not be shown to users.</p>

                                <hr>

                                <h6 class="font-weight-semibold">Confirmation</h6>
                                <p>Are you sure you want to delete <code>@item.Title</code>?</p>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
                                @*<button type="button" class="btn bg-danger">Delete</button>*@
                                <form asp-action="Delete" asp-controller="Articles" asp-area="Panel" asp-route-id="@item.Id" method="post">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


            }
        </tbody>
    </table>
</div>