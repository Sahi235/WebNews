@model WebNews.Areas.Panel.ViewModels.Roles.CreateRoleVM;
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_LimitlessLayout.cshtml";
}

@section css
{
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@if (Model.Message != null)
{
    <div class="alert alert-primary alert-rounded alert-dismissible">
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        <span class="font-weight-semibold"></span> @Model.Message
    </div>
}

<form asp-action="CreateRole" asp-controller="Roles" asp-area="Panel" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-form-label col-lg-2">Default text input</label>
        <div class="col-lg-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">
        Create
    </button>
</form>